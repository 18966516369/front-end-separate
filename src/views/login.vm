<!doctype html>
<html class="no-js" lang="en">
<head>
    <title>全民坐庄</title>
    <script>var translate_page='index';</script>
    #parse('/common/top.vm')
    <link rel="stylesheet" href="/static/css/common.css"/>
</head>
<body class="login-body">
    #parse('/common/old.vm')
    #parse('/common/header.vm')

    <div class="login-con">
        <div class="container">
            <form class="login" id="login-form">
                <div class="login-top clearfix">
                    <div class="login-top-title">登录</div>
                    <a href="#" class="login-top-reg">注册 →</a>
                </div>
                <div class="login-inner-con">
                    <div class="form-login">
                        <i class="form-icon-user"></i>
                        <input type="text" name="operator" placeholder="用户名：">
                    </div>
                    <div class="form-login">
                        <i class="form-icon-pass"></i>
                        <input type="password" name="passwd" placeholder="密码：">
                    </div>
                    <div class="form-login code-con clearfix">
                        <label class="code-label">验证码</label>
                        <input type="text" name="validateCode" class="code" maxlength="4">
                        <img src="/validateCode" class="reg-code-img" width="107" height="45">
                        <div class="code-text">
                            看不清<br>
                            <span>换一张</span>
                        </div>
                    </div>
                    <div class="form-login login-forget">
                        <a href="#">忘记密码</a>
                    </div>
                    <div>
                        <div class="login-btn" id="login-btn">登录</div>
                        <div class="login-btn reg-btn">立即注册</div>
                    </div>
                </div>
            </form>
        </div>
    </div>
    <div class="login-footer">
        <div class="login-footer-text">
            2013 ~ 2015 © iG99.com All Rights Reserved.
        </div>
    </div>

    #parse('/common/script.vm')
    <script src="/static/plugin/jquery.validation/jquery.validate.js"></script>
    <script src="/static/plugin/xss/xss.js"></script>
    <script src="/static/js/login.js"></script>

</body>
</html>